{
  "manifest_version": 2,

  "name": "Douban Query",
  "description": "This extension calls douban search system.",
  "version": "1.0",

  "permissions": [
   "contextMenus"
  ],
   
   "background": {
    "scripts": ["contextmenu.js"]
  },
"icons": {
    "16": "icon_16.png"
    },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

    "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+D",
        "mac": "Command+Shift+D",
        "chromeos": "Ctrl+Shift+D",
        "linux": "Ctrl+Shift+D"
      }
    }
  }
}